{
    // Exclude files from File Explorer
    "files.exclude": {
        "**/*.bak*"                         : true,
        "fonts"                             : true,
        "node_modules"                      : true,
        "dist/components"                   : true,
        "dist/themes"                       : true,
        "semantic-ui/[^sr]*"                : true,
        "semantic-ui/*/[^si]*"              : true,
        "semantic-ui/*/*/[^glo|add]*"       : true,
        ".vscode/chrome"                    : true,
    },
    // Adding support for Live Server
    "liveServer.settings.NoBrowser"         : true
}